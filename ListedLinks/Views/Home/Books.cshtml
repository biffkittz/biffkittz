@model List<string>

@{
    ViewBag.Title = "Books, paper-y stuff";
}

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
    <script src="~/js/signalr.js" crossorigin="anonymous"></script>
    <script src="~/js/saasactivityhub.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="card" style="width: 1000px; margin-bottom:5px">
        <div class="card-header">
            Recent Recommendations
        </div>
        <div class="card-body">
            <div class="container" style="max-width:100%">
                <ul style="list-style-type:circle">
                    <li>The Broken Earth Trilogy by N.K. Jemisin [<a href="https://nkjemisin.com/" target="_blank">nkjemisin.com</a>]</li>
                    <li>The Feast of the Goat: A Novel by Mario Vargas Llosa [<a href="https://www.nytimes.com/2025/04/13/books/review/mario-vargas-llosa-appraisal.html" target="_blank">nytimes.com</a>]</li>
                    <li>Grant by Ron Chernow [<a href="https://ronchernow.com/" target="_blank">ronchernow.com</a>]</li>
                    <li>Empty Mansions: The Mysterious Life of Huguette Clark and the Spending of a Great American Fortune by Bill Dedman [<a href="https://en.wikipedia.org/wiki/Bill_Dedman" target="_blank">en.wikipedia.org</a>]</li>
                    <li>Piranesi by Susanna Clarke [<a href="https://www.newyorker.com/magazine/2020/09/14/susanna-clarkes-fantasy-world-of-interiors" target="_blank">newyorker.com</a>]</li>
                    <li>Senlin Ascends (The Books of Babel Book 1) by Josiah Bancroft [<a href="http://www.thebooksofbabel.com/" target="_blank">thebooksofbabel.com</a>]</li>
                    <li>A Splintered History of Wood: Belt-Sander Races, Blind Woodworkers & Baseball Bats by Spike Carlsen [<a href="https://www.spikecarlsen.com/" target="_blank">spikecarlsen.com</a>]</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="card" style="width: 1000px; margin-bottom:5px">
        <div class="card-header">
            Currently Reading
        </div>
        <div class="card-body">
            <div class="container" style="max-width:100%">
                <div class="row">
                    <div class="col-sm">
                        <img style="max-height: 300px; max-width: 300px; border-radius: 18%; margin-left: auto; margin-right: auto; display:block" src="https://www.dropbox.com/scl/fi/h74ewimtpe986x7mpltbf/domaindrivendesign.png?rlkey=y1b7reze63bf7yf9x87tzu1gf&st=2bjuc4km&raw=1" alt="Domain-Driven Design">
                        <p style="text-align: center;font-weight: lighter">Domain-Driven Design, Eric Evans</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card" style="width: 1000px; margin-bottom:5px">
        <div class="card-header">
            On Deck
        </div>
        <div class="card-body">
            <div class="container" style="max-width:100%">
                <div class="row">
                    <div class="col-sm">
                        <img style="max-height: 300px; max-width: 300px; border-radius: 18%; margin-left: auto; margin-right: auto; display:block" src="https://www.dropbox.com/scl/fi/wdtvclkw6tg2ssjqe0nps/nabisco.jpg?rlkey=rfo5vbw5ua77vhswp6klsz2fw&st=2xumcvdd&raw=1" alt="Barbarians at the Gate">
                        <p style="text-align: center;font-weight: lighter">Barbarians at the Gate, The Fall of RJR Nabisco, Bryan Burrough, John Helyar</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>